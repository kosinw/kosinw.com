{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": false,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "esnext",
    "baseUrl": "."
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "layouts/static-page.jsx", "layouts/index.jsx", "scripts/generate-sitemap.js", "pages/_app.jsx"]
}
